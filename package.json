{
  "name": "demo-gulp",
  "version": "2.0.0",
  "description": "Seminar front-end for PHP devs NeoLab",
  "scripts": {
    "dev": "run-s htmlhint htmlindent stylelint eslint clean build_dev",
    "start": "run-s htmlhint htmlindent stylelint eslint clean build_production start_revision finish_revision gzip",
    "clean": "rm -rf dist public build",
    "dev:new": "run-s htmlhint htmlindent stylelint eslint clean_node_modules install_node_modules clean build_dev",
    "start:new": "run-s htmlhint htmlindent stylelint eslint clean_node_modules install_node_modules clean build_production start_revision finish_revision gzip",
    "install_node_modules": "yarn install",
    "clean_node_modules": "rm -rf node_modules",
    "check_conversion_code": "run-s htmlhint htmlindent stylelint eslint",
    "gzip": "gulp gzip",
    "eslint": "gulp eslint",
    "htmlhint": "gulp htmlhint",
    "stylelint": "gulp stylelint",
    "htmlindent": "gulp htmlindent",
    "build_dev": "gulp dev",
    "build_production": "gulp build",
    "start_revision": "gulp start-revision",
    "finish_revision": "gulp finish-revision"
  },
